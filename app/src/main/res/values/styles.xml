<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/common_dark</item>
        <item name="android:textColorHint">@color/common_gray</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/dimens_14dp</item>
    </style>
    <style name="NoSplitMotionEvents" parent="AppTheme">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    <style name="big_img_dialog" parent="@style/sheet_dialog">
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimationScale</item>
    </style>
    <style name="ActionSheetDialogAnimationScale" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="sheet_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="my_dialog" parent="@style/sheet_dialog">
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <style name="my_dialog_1" parent="@style/sheet_dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <style name="bottom_dialog" parent="@style/sheet_dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>


    <style name="AppSplash" parent="AppTheme">
        <!--<item name="android:windowBackground">@mipmap/app_start</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/login_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimens_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_border_button">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/blue_border</item>
        <item name="android:textColor">@color/night_blue</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="button_full_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/login_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimens_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PopupWindowAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popup_window_in</item>
        <item name="android:windowExitAnimation">@anim/popup_window_out</item>
    </style>
</resources>
