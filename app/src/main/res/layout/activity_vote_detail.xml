<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_vote_detail_bac"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_vote_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/dimens_18sp"
            tool:text="健身餐为什么这么好看健身餐为什么这么好 看健身餐为什么这么好看" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:id="@+id/tv_vote_detail_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2018.9.15"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="前投票"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/people"
                />

            <TextView
                android:id="@+id/tv_vote_detail_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="999"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="参与"
                android:textSize="@dimen/dimens_12sp" />
        </LinearLayout>

        <include layout="@layout/split_line_margin" />

        <TextView
            android:id="@+id/tv_vote_detail_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_12sp"
            tool:text="简介：健身餐为什么这么好看，" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_vote_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tint_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本次投票由" />

                <TextView
                    android:id="@+id/tv_vote_detail_community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="新科祥园"
                    android:textColor="@color/night_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="发起" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/vote_detail_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/main_blue"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_vote_detail_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_selector"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="发布"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>