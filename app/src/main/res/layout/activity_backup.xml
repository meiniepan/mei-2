<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#cc3285ff"
            android:gravity="center"
            android:padding="8dp"
            android:text="当App被删除后在其他手机上使积分账户时，需导入当前账户备份私 钥，否则可能永久丢失账户资产，请务必做好备份私钥，并妥善保管!"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_12sp" />

        <include layout="@layout/split_area" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@mipmap/icon_score_account_avatar" />

        <TextView
            android:id="@+id/tv_account_name_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp" />

        <include layout="@layout/split_area" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="积分账户" />

            <TextView
                android:id="@+id/tv_account_name_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <include layout="@layout/split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="账户资产" />

            <TextView
                android:id="@+id/tv_account_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/back_up"
        style="@style/button_style"
        android:layout_marginTop="30dp"
        android:text="@string/backup_pk"/>
</LinearLayout>