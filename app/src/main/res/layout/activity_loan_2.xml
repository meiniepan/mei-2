<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/tint_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/white">

                <include layout="@layout/back_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="已借款"
                    android:textSize="@dimen/title_size" />

            </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@color/main_blue"
                    android:paddingEnd="@dimen/common_margin"
                    android:paddingStart="@dimen/common_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余额度"
                        android:textSize="@dimen/title_size"
                        android:layout_marginTop="@dimen/common_height"
                        android:textColor="@color/white_alpha" />

                    <TextView
                        android:id="@+id/tv_residue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tool:text="2000.00元"
                        android:textSize="24sp"
                        android:layout_marginTop="@dimen/text_margin"
                        android:layout_marginBottom="@dimen/common_height"
                        android:textColor="@color/common_gray" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_wallet_limit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="已使用(元)"
                        android:textColor="@color/main_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/wallet_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/night_blue"
                        android:textSize="@dimen/dimens_16sp"
                        android:textStyle="bold"
                        tool:text="100.00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wallet_borrow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="已冻结(元)"
                        android:textColor="@color/main_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/wallet_borrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/night_blue"
                        android:textSize="@dimen/dimens_16sp"
                        android:textStyle="bold"
                        tool:text="100.00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wallet_pay_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="总额度(元)"
                        android:textColor="@color/main_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/wallet_pay_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/night_blue"
                        android:textSize="@dimen/dimens_16sp"
                        android:textStyle="bold"
                        tool:text="100.00" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_confirm"
                style="@style/button_style"
                android:text="去借款" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>