<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/split_area" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_settlement_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单编号:"
                android:textSize="@dimen/dimens_16sp" />

            <TextView
                android:id="@+id/tv_settlement_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待结算"
                android:textColor="@color/custom_orange" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/common_gray" />

            <TextView
                android:id="@+id/tv_settlement_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:textColor="@color/common_gray" />

            <TextView
                android:id="@+id/tv_settlement_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00 元" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="平台手续费"
                android:textColor="@color/common_gray" />

            <TextView
                android:id="@+id/tv_settlement_poundage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00 元" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="结算"
                android:textColor="@color/common_gray" />

            <TextView
                android:id="@+id/tv_settlement_settle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00 元" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/common_gray" />

            <TextView
                android:id="@+id/tv_settlement_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00 元" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>