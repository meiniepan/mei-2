<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tint_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/title_height"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/wallet_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="钱包"
            android:textSize="22sp" />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tint_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_credit"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:background="@mipmap/wallet_blue_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:text="无忧信用"
                    android:textColor="@color/white_alpha" />

                <TextView
                    android:id="@+id/wallet_credit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_27sp"
                    android:textStyle="bold"
                    tool:text="220" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:background="@mipmap/wallet_orange_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:text="收益"
                    android:textColor="@color/white_alpha" />

                <TextView
                    android:id="@+id/wallet_benefit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_27sp"
                    android:textStyle="bold"
                    tool:text="220" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:background="@mipmap/wallet_green_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:text="营收 (元)"
                    android:textColor="@color/white_alpha" />

                <TextView
                    android:id="@+id/wallet_income"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:text="220"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimens_27sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_wallet_limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="可借额度(元)"
                android:textColor="@color/main_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wallet_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_16sp"
                android:textStyle="bold"
                tool:text="100.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wallet_borrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="已借款(元)"
                android:textColor="@color/main_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wallet_borrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_16sp"
                android:textStyle="bold"
                tool:text="100.00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wallet_pay_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="本期应还(元)"
                android:textColor="@color/main_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wallet_pay_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_16sp"
                android:textStyle="bold"
                tool:text="100.00" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/split_line" />

    <Button
        android:id="@+id/btn_apply"
        style="@style/button_style"
        android:text="申请借款" />

    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/sl_list_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_height="match_parent"
        app:emptyDrawable="@mipmap/empty_order"
        app:errorDrawable="@mipmap/net_error">

        <com.wuyou.merchant.view.widget.recyclerHelper.NewRefreshRecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.gs.buluo.common.widget.StatusLayout>
</LinearLayout>