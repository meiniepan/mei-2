<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/wallet_bac_blue"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总收入"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:id="@+id/tv_wallet_total_income"
                android:text="220.00"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="元"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_wallet_left_list"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可结算金额"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_wallet_left_list"
                android:text="200.00"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/divide_gray"/>
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_wallet_right_list"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待完结金额"
                android:textColor="@color/common_gray"
                android:textSize="@dimen/dimens_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_wallet_right_list"
                android:text="200.00"
                android:textColor="@color/night_blue"
                android:textSize="@dimen/dimens_16sp" />
        </LinearLayout>
    </LinearLayout>
    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/sl_wallet"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="267dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/dimens_12sp"
    android:text="近7日订单数:"
    />
    <TextView
        android:id="@+id/tv_wallet_deal_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_18sp"
        android:text="223"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_12sp"
        android:text="笔"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_12sp"
        android:text="订单金额:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_18sp"
        android:id="@+id/tv_wallet_deal_amount"
        android:text="223"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_12sp"
        android:text="元"
        />

</LinearLayout>
    <com.wuyou.merchant.view.widget.lineChart.LineChartView
        android:id="@+id/chart_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:layout_marginEnd="15dp"/>
</LinearLayout>

    </com.gs.buluo.common.widget.StatusLayout>
</LinearLayout>