<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/create_vote_question_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/split_area"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题:"
            android:textColor="@color/common_gray" />

        <EditText
            android:id="@+id/create_vote_question_item_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:hint="请输入问题，50字以内"
            android:maxLength="50"
            tool:text="数据库里打开链接打开拉萨就打算接口对接埃克设计的可拉斯基的按时艰苦的阿里" />

        <ImageView
            android:id="@+id/create_vote_question_item_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/close_blue" />
    </LinearLayout>
    <include layout="@layout/split_line_margin" />
</LinearLayout>