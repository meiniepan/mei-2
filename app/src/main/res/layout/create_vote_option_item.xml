<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选项:"
            android:textColor="@color/common_gray"/>

        <EditText
            android:id="@+id/create_vote_option_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入选项，20字以内"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/dimens_12sp"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/create_vote_option_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/add_blue"/>
        <ImageView
            android:id="@+id/create_vote_option_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/delete"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <include layout="@layout/split_line_margin"/>
</LinearLayout>